{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "inlineSources": true,
        "sourceMap": true,
        "declaration": true,
        "noImplicitAny": true,
        "outDir": "./out",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "paths": {
            "@azure/functions-core": [
                "./typings/functions-core"
            ]
        }
    },
    "include": [
        "Bootstrap/*.ts",
        "*.ts",
        "AutoCollection/diagnostic-channel/*.ts",
        "Tests/**/*.ts"
    ],
    "files": [
        "./node_modules/@types/cls-hooked/index.d.ts"
    ],
    "exclude": [
        "node_modules",
        "Tests/FunctionalTests",
        "Tests/BackCompatibility"
    ]
}
